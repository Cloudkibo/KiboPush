uglify_css()
{
  echo "Uglifying CSS Files..."
  mkdir -p client/public/dist
  echo "CSS dist folder made"
  uglifycss client/public/assets/vendors/custom/css/custom-style.css --output client/public/dist/custom-style.min.css client/public/Bootstrap/dist/css/latestBootstrap.css client/public/assets/Emoji/picker.css client/public/assets/dashboard/dashboard.css --output client/public/dist/kibopush.min.css
  echo "CSS files uglified"
}

uglify_js()
{
  echo "Uglifying JS Files..."
  uglifyjs client/public/js/bundle.js --output client/public/js/bundle.js
  echo "JS files uglified"
}

compile_react()
{
   echo "Build reactjs bundle..."
   browserify client/src/app.js -o client/public/js/bundle.js -t [ babelify --presets [ es2015 react ] ]
   echo "Done with reactjs bundle"
}

compile_react
uglify_css
uglify_js


